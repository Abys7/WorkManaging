<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:background="@drawable/settings_item_background"
    android:padding="16dp">

    <!-- Status Dot (Visible only if it's a project with status) -->
    <View
        android:id="@+id/action_status_dot"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:background="@drawable/status_dot_background"
        android:backgroundTint="@color/status_not_started"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"/>

    <!-- Content Placeholder (Like wireframe image) -->
    <View
        android:id="@+id/action_image_placeholder"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#D1D5DB" 
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/action_status_dot"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_action_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Action Title"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/action_image_placeholder" />

    <TextView
        android:id="@+id/tv_action_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Subtitle / Date"
        android:textColor="#808080"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_action_title" />

</androidx.constraintlayout.widget.ConstraintLayout>